{
  "name": "use-disclosable",
  "description": "A react hook that allow to easily manage disclosable elements",
  "version": "0.1.1",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "react",
    "disclosable",
    "hook",
    "dialog",
    "drawer",
    "modal"
  ],
  "author": "Thomascogez <thomas.cogez@gmail.com>",
  "homepage": "https://use-disclosable.thomas-cogez.fr",
  "bugs": {
    "url": "https://github.com/Thomascogez/use-disclosable/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thomascogez/use-disclosable.git"
  },
  "main": "./dist/main.cjs",
  "types": "./dist/main.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/main.js",
      "default": "./dist/main.cjs"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint .",
    "test:watch": "vitest",
    "test:single": "vitest run",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "@arethetypeswrong/cli": "^0.16.0",
    "@eslint/js": "^9.9.1",
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.5.0",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "jsdom": "^25.0.0",
    "tsup": "^8.2.4",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.2.0",
    "vitest": "^2.0.5"
  },
  "files": [
    "dist"
  ]
}