{
  "name": "use-disclosable",
  "description": "A react hook that allow to easily manage disclosable elements",
  "version": "0.3.1",
  "type": "module",
  "license": "MIT",
  "keywords": [
    "react",
    "disclosable",
    "hook",
    "dialog",
    "drawer",
    "modal"
  ],
  "author": "Thomascogez <thomas.cogez@gmail.com>",
  "homepage": "https://use-disclosable.thomas-cogez.fr",
  "bugs": {
    "url": "https://github.com/Thomascogez/use-disclosable/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Thomascogez/use-disclosable.git"
  },
  "main": "./dist/main.cjs",
  "types": "./dist/main.d.ts",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "import": "./dist/main.js",
      "default": "./dist/main.cjs"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "lint": "eslint .",
    "test:watch": "vitest",
    "test:single": "vitest run",
    "check-exports": "attw --pack . --ignore-rules=cjs-resolves-to-esm"
  },
  "peerDependencies": {
    "react": "*"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.3",
    "@eslint/js": "^9.19.0",
    "@testing-library/react": "^16.2.0",
    "@types/node": "^22.13.1",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "globals": "^15.14.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@testing-library/jest-dom": "^6.5.0",
    "jsdom": "^26.0.0",
    "tsup": "^8.3.6",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.23.0",
    "vitest": "^3.0.5"
  },
  "files": [
    "dist"
  ]
}